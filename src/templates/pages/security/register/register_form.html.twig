<section class="py-5" id="register-form">
    <div class="container px-5">
        <!-- Contact form-->
        <div class="bg-light rounded-4 py-5 px-4 px-md-5">
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3">
                    <i class="bi bi-door-open"></i>
                </div>
                <h1 class="fw-bolder">Register here</h1>
                <p class="lead fw-normal text-muted mb-0">Please sign up below</p>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <form method="POST" action="/register">
                        <!-- First name input-->
                        <div class="form-floating mb-3">
                            <input class="form-control {% if form_errors['firstName'] is defined %}is-invalid{% endif %}" id="firstName" type="text" name="firstName" placeholder="Enter your first name">
                            <label for="firstName">First name</label>
                            {% if form_errors['firstName'] is defined %}
                                <div class="invalid-feedback">{{ form_errors['firstName'] }}</div>
                            {% endif %}
                        </div>
                        <!-- Last name input-->
                        <div class="form-floating mb-3">
                            <input class="form-control {% if form_errors['lastName'] is defined %}is-invalid{% endif %}" id="lastName" type="text" name="lastName" placeholder="Enter your last name">
                            <label for="lastName">Last name</label>
                            {% if form_errors['lastName'] is defined %}
                                <div class="invalid-feedback">{{ form_errors['lastName'] }}</div>
                            {% endif %}
                        </div>
                        <!-- Email address input-->
                        <div class="form-floating mb-3">
                            <input class="form-control {% if form_errors['email'] is defined %}is-invalid{% endif %}" id="email" type="email" name="email" placeholder="name@example.com">
                            <label for="email">Email address</label>
                            {% if form_errors['email'] is defined %}
                                <div class="invalid-feedback">{{ form_errors['email'] }}</div>
                            {% endif %}
                        </div>
                        <!-- Password input-->
                        <div class="form-floating mb-3">
                            <input class="form-control {% if form_errors['password'] is defined %}is-invalid{% endif %}" id="password" type="password" name="password" placeholder="Create a password">
                            <label for="password">Password</label>
                            {% if form_errors['password'] is defined %}
                                <div class="invalid-feedback">{{ form_errors['password'] }}</div>
                            {% endif %}
                        </div>
                        <!-- Confirm Password input-->
                        <div class="form-floating mb-3">
                            <input class="form-control {% if form_errors['confirmPassword'] is defined %}is-invalid{% endif %}" id="confirmPassword" type="password" name="confirmPassword" placeholder="Confirm your password">
                            <label for="confirmPassword">Confirm Password</label>
                            {% if form_errors['confirmPassword'] is defined %}
                                <div class="invalid-feedback">{{ form_errors['confirmPassword'] }}</div>
                            {% endif %}
                        </div>
                        <!-- Submit Button-->
                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
