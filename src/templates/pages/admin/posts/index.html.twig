{% extends 'layout/admin/_base_admin.html.twig' %}

{% block title %}Listing Post{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Liste des Posts</h1>
        <a href="/admin/posts/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau Post
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Aperçu</th>
                <th>Catégorie</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.preview }}</td>
                    <td>{{ post.category.name }}</td>
                    <td>{{ post.createdAt|date('d/m/Y H:i') }}</td>
                    <td class="text-center">
                        <a href="/admin/posts/{{ post.id }}/edit" class="btn btn-sm btn-outline-secondary" title="Modifier">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun post trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end align-items-center mt-4">
        <ul class="pagination">
            {% if currentPage > 1 %}
                <li class="page-item">
                    <a class="page-link" href="/admin/posts?page={{ currentPage - 1 }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span> Précédent
                    </a>
                </li>
            {% endif %}

            <li class="page-item active">
                <span class="page-link">{{ currentPage }}</span>
            </li>

            {% if currentPage < nbPages %}
                <li class="page-item">
                    <a class="page-link" href="/admin/posts?page={{ currentPage + 1 }}" aria-label="Next">
                        Suivant <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </div>
{% endblock %}
