{% extends 'layout/admin/_base_admin.html.twig' %}

{% block title %}Listing Post Category{% endblock %}

{% block body %}
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1 class="h3">Post Category Listing</h1>
		<a href="/admin/categories/create" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i> New Post Category
		</a>
	</div>

	<div class="table-responsive">
		<table class="table table-bordered table-striped table-hover">
			<thead class="table-light">
			<tr>
				<th>#</th>
				<th>Name</th>
				<th class="text-center">Actions</th>
			</tr>
			</thead>
			<tbody>
			{% for postCategory in postCategories %}
				<tr>
					<td>{{ postCategory.id }}</td>
					<td>{{ postCategory.name }}</td>
					<td class="text-center d-flex justify-content-center align-items-center gap-1">
						<a href="/admin/post-categories/{{ postCategory.id }}/edit" class="btn btn-sm btn-outline-success" title="Edit">
							<i class="bi bi-pencil-square"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3" class="text-center">No post category found.</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>

	{{ include('pages/admin/components/_pagination.html.twig', {
		'currentPage': currentPage,
		'nbPages': nbPages,
		'entity': 'categories'
	}) }}
{% endblock %}
