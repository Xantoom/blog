{% extends 'layout/_base.html.twig' %}

{% block title %}Page not Found{% endblock %}

{% block body %}
    <div class="container text-center mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="display-1 text-danger">404</h1>
                <p class="lead text-muted">Oops! Page not found.</p>
                <p class="mb-4">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
                <a href="{{ path('/') }}" class="btn btn-primary btn-lg">Go to Homepage</a>
            </div>
        </div>
    </div>
{% endblock %}
